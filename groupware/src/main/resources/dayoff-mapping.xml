<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dayoff">
	
	<select id="selectCreateCondition" resultType="DayoffCreateCondition">
		select * from dayoff_create_condition
	</select>
	
	<update id="updateCreateCondition" parameterType="DayoffCreateCondition">
		update dayoff_create_condition set dayoff_days = #{dayoff_days}  where year_in_office = #{year_in_office}
	</update>
</mapper>