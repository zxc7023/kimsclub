<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="calendar">
		
<!-- 이벤트 등록 -->
	<insert id="addCalendar" parameterType="calendar" >
<!-- 		<selectKey resultType="int" keyProperty="board_no" order="BEFORE">
			select nvl(max(board_no),0)+1 from board where board_type=#{board_type}
		</selectKey> -->
		insert into
		SCHEDULE(event_no, event_title, event_content, event_color, event_start, event_end) 
		values (#{event_no},#{event_title},#{event_content},#{event_color},#{event_start},#{event_end})
	</insert>

	<select id="selectCalendarSequence" resultType="int">
		select calendar_seq.nextval from dual
	</select>
</mapper>